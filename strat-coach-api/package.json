{
  "name": "strat-coach-api",
  "version": "1.0.0",
  "description": "Backend API server for The Strat Coach - handles authentication, Claude API proxying, and usage tracking",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'ESLint not configured yet'",
    "db:migrate": "node scripts/migrate.js"
  },
  "keywords": ["trading", "anthropic", "claude", "fastify", "strat"],
  "author": "Phil",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.4.2",
    "jose": "^5.9.6",
    "pg": "^8.13.1",
    "pino-pretty": "^13.0.0",
    "stripe": "^17.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/pg": "^8.11.10",
    "@vitest/ui": "^3.0.5",
    "nodemon": "^3.1.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}
